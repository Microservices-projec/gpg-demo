generator client {
provider = "prisma-client-js"
}


datasource db {
provider = "mysql"
url = env("DATABASE_URL")
}


model User {
id Int @id @default(autoincrement())
googleSub String @unique
email String @unique
name String
picture String?
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
userData UserData?
}


model UserData {
id Int @id @default(autoincrement())
userId Int @unique
blogs Json @default(jsonArray())
score Int @default(0)
level Int @default(1)
xp Int @default(0)
updatedAt DateTime @updatedAt
user User @relation(fields: [userId], references: [id])
}